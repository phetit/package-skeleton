{
    "name": "phetit/package-template",
    "type": "library",
    "description": "Template for a PHP package",
    "keywords": [
        "template",
        "php package",
        "php skeleton",
        "php template"
    ],
    "homepage": "https://github.com/phetit/package-template",
    "license": "MIT",
    "authors": [
        {
            "name": "David Lombera",
            "email": "david.lomberlan@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Phetit\\PackageTemplate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phetit\\PackageTemplate\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-deprecation-rules": "^1.1"
    }
}
